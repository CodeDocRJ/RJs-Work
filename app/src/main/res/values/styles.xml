<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="background">@color/white</item>
    </style>

    <style name="linDetail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_37sdp</item>
        <item name="android:background">@drawable/bg_detail_4</item>
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>

    </style>

    <style name="txtTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>

    <style name="txtValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">@dimen/_13ssp</item>
    </style>


</resources>